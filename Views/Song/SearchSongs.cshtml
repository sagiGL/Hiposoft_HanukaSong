@model Hiposoft_HanukaSong.ModelView.SongViewModel
@using Hiposoft_HanukaSong.Models

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SearchSongs</title>
    <style>
        body {
            margin-left: 10px;
            background: #5d9ab2 url("http://www.srugim.co.il/i/wp-content/uploads/2016/12/shutterstock_308682197-e1480874499986__w645h390q80.jpg") no-repeat;
            background-size: cover;
        }

        p.serif {
            font-family: "Times New Roman", Times, serif;
        }

        p.sansserif {
            font-family: Arial, Helvetica, sans-serif;
        }

        a:link, a:visited {
            background-color: #f44336;
            color: white;
            padding: 3px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        a:hover, a:active {
            background-color: red;
        }
    </style>

</head>
<body>
    <div>
        <form action="SearchResults" method="post" style="padding:8px;background-color:aliceblue;color:steelblue;font-size:larger;font:bolder;font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">
            Enter song name to search<input id="Text1" name="txtSongName" type="text" />
            <input id="Submit1" type="submit" value="Search" style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;background-color:red;color:white" />
        </form>
        <a href="http://localhost:61435/Song/Enter">OR JUST ADD SONG</a>
    </div>
    <br />

    @Html.Partial("DisplaySongs", Model)

</body>
</html>
